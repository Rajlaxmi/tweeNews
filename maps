var map;
var prev_x=0;
function getnewdata()
{
var xmlhttp;
if (window.XMLHttpRequest)
  {// code for IE7+, Firefox, Chrome, Opera, Safari
  xmlhttp=new XMLHttpRequest();
  }
else
  {// code for IE6, IE5
  xmlhttp=new ActiveXObject("Microsoft.XMLHTTP");
  }
 
	xmlhttp.onreadystatechange=function()
  {
  if (xmlhttp.readyState==4 && xmlhttp.status==200)
    {
    	var temp = xmlhttp.responseText;
			temp = temp.split("\"");
		var x = temp[3];
		var y = temp[7];
    var z = temp[11];
console.log(temp);
console.log(x+"   "+y+"  "+z);
		addMarker(x,y,z);
    }
  }
xmlhttp.open("GET","http://localhost/tweet/assign/getlatestdata.php",true);
xmlhttp.send();
}

function initialize() {
  var mapOptions = {
    zoom: 5,
    center: new google.maps.LatLng(21.02796250773456, 71.54999999999995),
    mapTypeId: google.maps.MapTypeId.ROADMAP
  };
 map = new google.maps.Map(document.getElementById('map-canvas'),
      mapOptions);
}

